<div class="stats-panel">
  <h2>
    <strong>Money:</strong>
    <img class="pokedollar-icon" src="<%= asset_path 'pokedollar.png' %>">
    <%= format_number(user.money) %>
  </h2>

  <div class="stats-row">
     <div class="stat-pair">
      <div class="stat-item">
        <strong>Pok√©mon caught:</strong>
        <span><%= format_number(user.catch_count) %></span>
      </div>
      <div class="stat-item">
        <strong>Money Earn Rate:</strong>
        <img class="pokedollar-icon" src="<%= asset_path 'pokedollar.png' %>">
        <span><%= format_number(user.earn_rate*user.catch_count) %>/s</span>
      </div>
    </div>

    <div class="stat-pair">
      <div class="stat-item">
        <strong>Trainers:</strong>
        <span><%= format_number(user.trainers) %></span>
      </div>
      <div class="stat-item">
        <strong>Pokemon Catch Rate:</strong>
        <span><%= format_number(user.auto_click_rate) %>/s</span>
      </div>
    </div>

    <div class="stat-pair">
      <div class="stat-item">
        <strong>Berries:</strong>
        <span><%= format_number(user.berries) %></span>
      </div>
      <div class="stat-item">
        <strong>Earn Rate per Pokemon:</strong>
        <img class="pokedollar-icon" src="<%= asset_path 'pokedollar.png' %>">
        <span><%= format_number(user.earn_rate) %>/s</span>
      </div>
    </div>
  </div>
</div>
